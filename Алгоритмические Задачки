// НА СЕРВЕРЕ
Функция ВычислитьФакториал(ЧислоN) Экспорт
	
	Если ЧислоN <= 0 Тогда
		Сообщить("Число должно быть больше 0");
		Возврат 0;
	КонецЕсли;   
	
   Факториал = 1;    
   Для Сч = 1 По ЧислоN Цикл
         Факториал = факториал * Сч;
	 КонецЦикла; 
	 
	 Сообщить(Факториал); 

 КонецФункции 
 
Функция СуммаЦифрЧисла(ЧислоN) Экспорт
  Результат = 0; 
  СтрокаБезПробелов = СтрЗаменить(ЧислоN, Символы.НПП ,"");
  ЧислоСтрока = СтрокаБезПробелов;  
  
  Для Индекс = 1 По СтрДлина(ЧислоСтрока) Цикл  
	  Символ = Сред(ЧислоСтрока, Индекс, 1);
      Результат = Результат + Число(Символ);	  
  КонецЦикла;  
  
  Сообщить(Результат);
 
КонецФункции 

Функция СтепеньДвойки(ЧислоN) Экспорт
	БазовоеЧисло = ЧислоN;
	ОстатокОтДеления = ЧислоN % 2;  
	
	Если ОстатокОтДеления = 0 И ЧислоN <> 0 Тогда
		Сч = 0;
		Пока ЧислоN <> 1 И ЧислоN <> (-1) Цикл
			
			ЧислоN = ЧислоN / 2;
			Сч = Сч + 1;
		КонецЦикла;	  
		
		Сообщить("Число " + БазовоеЧисло + " является степенью двойки и степень = " + Сч);    
		
	Иначе
		Сообщить("Число " + БазовоеЧисло + "  не является степенью двойки!");
		
	КонецЕсли;
	
КонецФункции 

Функция ЧислаМарсенна(ЧислоN) Экспорт
	
	Если ЧислоN > 0 Тогда
	Для Число = 1 По ЧислоN Цикл
	
		Мерсенн = 0;
		Мерсенн = pow(2, Число) - 1;
		
		Сообщить(Мерсенн);
	КонецЦикла;	         
		
	Иначе Сообщить("Введите число больше 0");
	
	КонецЕсли;

КонецФункции 

Функция ВозвестиЧислоВСтепень(Число, Степень) Экспорт   
	
Если Степень < 0 Тогда
	Сообщить("Степень должна быть больше 0");
Возврат 0;	

КонецЕсли;

Результат = 1; 
Для Сч = 1 По Степень Цикл

	Результат = Результат * Число;

КонецЦикла;	

Сообщить(Результат);
 КонецФункции 
 
Функция ВывестиЧислаФибоначи(ЧислоN) Экспорт 
	А = 0;
	Б = 1;
	
	Сообщить(А);
	Сообщить(Б);

	Для Сч = 1 По ЧислоN Цикл  
		С = А + Б;
		Сообщить(С);
		А = Б;
		Б = С;
	КонецЦикла;	
 
КонецФункции  

Функция НайтиМинимальноеИзЧисел(А, Б) Экспорт
	
	Мин = 0;
	Макс = 0;
	
	Если А - Б < 0 Тогда	
		Мин = А; 
		Макс = Б;    
		
	ИначеЕсли А - Б = 0 Тогда
		Сообщить("Числа " + Строка(А) + " и " + Строка(Б) + " равны"  );
		Возврат 0;
		
	Иначе
		Мин = Б;
		Макс = А;
		
	КонецЕсли;
	
	Сообщить("Число " + Строка(Мин) + " минимальное, а " + Строка(Макс) + " максимальное")
	
	
КонецФункции

Функция СравнениеДвухЧисел(ЧислоА, ЧислоБ) Экспорт
	
	Если ЧислоА <> ЧислоБ Тогда
	
		Мин = Мин(ЧислоА, ЧислоБ);
		Макс = Макс(ЧислоА, ЧислоБ); 
		Сообщить("Минимальное число " + Мин + ", максимальное число " + Макс);
		
	Иначе
		Сообщить("Числа равны!");
	КонецЕсли;
	
КонецФункции      

Функция ВозведениеДвойкиВСтепень(Степень) Экспорт    
	
	  Сообщить(pow(2, Степень));
	  
КонецФункции

Функция АлгоритмЕвклида(А, Б) Экспорт
       
	Пока А <> 0 И Б <> 0 Цикл
	
		Если А > Б Тогда
		
			А = А % Б;
			
		Иначе
			Б = Б % А;
		
		КонецЕсли;    
	КонецЦикла;
	
		Сообщить(А + Б);

	КонецФункции 
	
Функция НахождениеНОК(А, Б) Экспорт
		
		НОК = Макс(А,Б);
		Пока НЕ (НОК % А = 0 И НОК % Б = 0) Цикл
			НОК = НОК + 1;
		КонецЦикла;
		Сообщить(НОК);
	КонецФункции 
	
Функция СтоСлучайныхЧисел() Экспорт
		
    МассивСЧ = Новый Массив();
	
	Для Сч = 1 По 100 Цикл	
		ГСЧ = Новый ГенераторСлучайныхЧисел;
		СлучайноеЧисло = ГСЧ.СлучайноеЧисло(0, 1000);
	    МассивСЧ.Добавить(СлучайноеЧисло);
	КонецЦикла;
	
		МинЧ = МассивСч[0];
	    МаксЧ = МассивСч[0];     
	    Сумма = 0;

	
	Для А = 0 По МассивСЧ.ВГраница() Цикл
		Число = МассивСЧ[А];
		
		Если Число < МинЧ Тогда
			МинЧ = Число;
		КонецЕсли;
		
		Если Число > МаксЧ  Тогда
			 МаксЧ = Число;  
			 			
		 КонецЕсли;    
		 
		 Сумма = Сумма + Число;

	
	КонецЦикла;               
	
	СреднееАрифметическое = Сумма / МассивСЧ.Количество();    
	Сообщить("Суммма = " + Сумма);
	Сообщить("Количество элементов = " + МассивСЧ.Количество());
	
	Сообщить("Мин = " + Строка(МинЧ) + " Макс = " +  Строка(МаксЧ) + " Среднее " + Строка(СреднееАрифметическое));

КонецФункции 

Функция СортировкаПузырьком() Экспорт

	 МассивСЧ = Новый Массив();
	
	Для Сч = 1 По 100 Цикл	
		ГСЧ = Новый ГенераторСлучайныхЧисел;
		СлучайноеЧисло = ГСЧ.СлучайноеЧисло(0, 1000);
	    МассивСЧ.Добавить(СлучайноеЧисло);
	КонецЦикла;

	Для i = 0 По МассивСЧ.ВГраница() Цикл
		Для j = 0 ПО МассивСЧ.Вграница() - i - 1 Цикл
			Если МассивСЧ[j] > МассивСЧ[j + 1] Тогда
				Замена = МассивСЧ[j];
				МассивСЧ[j] = МассивСЧ[j + 1];
				МассивСЧ[j + 1] = Замена;
			КонецЕсли;            
		КонецЦикла;        
	КонецЦикла;    
	
	Для Каждого Элемент Из МассивСЧ Цикл
		Сообщить(Элемент);	
	КонецЦикла;

КонецФункции

Функция ФакториалСлучайногоЧисла() Экспорт
	ГСЧ = Новый ГенераторСлучайныхЧисел;
	ЧислоN = ГСЧ.СлучайноеЧисло(1, 15);
 	
	Факториал = 1;    
	Для Сч = 1 По ЧислоN Цикл
		Факториал = факториал * Сч;
	КонецЦикла; 
	
	Сообщить(Факториал); 
	

КонецФункции 




	

