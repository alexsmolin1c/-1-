
Процедура ПриНачалеРаботыСистемы()
	
	//1. Факториал числа n
	//Факториал целого неотрицательного числа n.
	//Условие продолжения рекурсии: факториал это произведение всех натуральных чисел до n включительно.
	//Условие окончания рекурсии: если число равно 0, то 0!=1.
	// Серверный.ВычислитьФакториал(6); 
	
	
	//2. Сумма цифр числа n
	//Условие продолжения рекурсии: сумма цифр числа равна последней цифре плюс сумма цифр числа без последней цифры.
	//Условие окончания рекурсии: если число равно 0, то и сумма цифр равна 0.
	// Серверный.СуммаЦифрЧисла(1234);
	
	
	// 3. Проверка числа 2^n
	//Алгоритм проверки числа на степень 2. 
	// Серверный.СтепеньДвойки(8);   
	
	
	//  4. Числа Мерсенна n
	//Числа Мерсе́нна — числа вида
	//Серверный.ЧислаМарсенна(5); 
	
	
	//5. Алгоритм возведения числа n в степень m 
	//Серверный.ВозвестиЧислоВСтепень(3, 5);  
	

	//6. Числа Фибоначчи
	//Числа Фибоначчи — элементы числовой последовательности, в которой каждое последующее число равно сумме двух предыдущих чисел.  
	//Серверный.ВывестиЧислаФибоначи(5);  
	
	
	//7. Минимальное и максимальное из чисел a и b
	//Серверный.НайтиМинимальноеИзЧисел(2, 5);    
	
	
	// 8. Сравнение двух чисел a и b
	//  Серверный.СравнениеДвухЧисел(5, 6); 
	
	
	//9. Возведение числа 2 в степень n
	//   Серверный.ВозведениеДвойкиВСтепень(5);   
	
	
	// 10. Алгоритм Евклида
	// Рекурсивный алгоритм нахождения наибольшего общего делителя (НОД) чисел а и b
	// Серверный.АлгоритмЕвклида(30, 18);  
	
	
	//11. Нахождение НОК чисел а и b 
	//   Серверный.НахождениеНОК(30, 18);    
	
	
	// УПРАЖНЕНИЯ 3 ИЗ Первой ссылки  Генератор чисел Мин Макс СреднееАриифметическое
     //  Серверный.СтоСлучайныхЧисел();  
	 
	// УПРАЖНЕНИЯ 4 ИЗ Первой ссылки Сортировка пузырьком
	// Серверный.СортировкаПузырьком();    
	
	// Упражнение 5 Факториал Случайного числа
	// Серверный.ФакториалСлучайногоЧисла();
 
  
  


КонецПроцедуры


// НА СЕРВЕРЕ
Процедура ВычислитьФакториал(ЧислоN) Экспорт
	//Сообщение пользователю
	//Или писать возврат
	//или заменить все на процедуры
	
	Если ЧислоN <= 0 Тогда
		Сообщение("Число должно быть больше 0");
		
	Иначе
		Факториал = 1;    
		Для Сч = 1 По ЧислоN Цикл
			Факториал = факториал * Сч;
		КонецЦикла; 
		
		Сообщение(Факториал);  
		
	КонецЕсли; 
	
КонецПроцедуры 

Процедура СуммаЦифрЧисла(ЧислоN) Экспорт
	Результат = 0; 
	СтрокаБезПробелов = СтрЗаменить(ЧислоN, Символы.НПП ,"");
	ЧислоСтрока = СтрокаБезПробелов;  
	
	Для Индекс = 1 По СтрДлина(ЧислоСтрока) Цикл  
		Символ = Сред(ЧислоСтрока, Индекс, 1);
		Результат = Результат + Число(Символ);	  
	КонецЦикла;  
	
	Сообщение(Результат);
	
КонецПроцедуры 

Процедура СтепеньДвойки(ЧислоN) Экспорт
	БазовоеЧисло = ЧислоN;
	ОстатокОтДеления = ЧислоN % 2;  
	
	Если ОстатокОтДеления = 0 И ЧислоN <> 0 Тогда
		Сч = 0;
		Пока ЧислоN <> 1 И ЧислоN <> (-1) Цикл
			
			ЧислоN = ЧислоN / 2;
			Сч = Сч + 1;
		КонецЦикла;	  
		
		Сообщение("Число " + БазовоеЧисло + " является степенью двойки и степень = " + Сч);    
		
	Иначе
		Сообщение("Число " + БазовоеЧисло + "  не является степенью двойки!");
		
	КонецЕсли;
	
КонецПроцедуры 

Процедура ЧислаМарсенна(ЧислоN) Экспорт
	
	Если ЧислоN > 0 Тогда
		Для Число = 1 По ЧислоN Цикл
			
			Мерсенн = 0;
			Мерсенн = pow(2, Число) - 1;
			
			Сообщение(Мерсенн);
		КонецЦикла;	         
		
	Иначе 
		Сообщение("Введите число больше 0");
		
	КонецЕсли;
	
КонецПроцедуры 

Процедура ВозвестиЧислоВСтепень(Число, Степень) Экспорт   
	
	Если Степень < 0 Тогда
		Сообщение("Степень должна быть больше 0");	
		
	Иначе
		
		Результат = 1; 
		Для Сч = 1 По Степень Цикл
			
			Результат = Результат * Число;
			
		КонецЦикла;	
		
		Сообщение(Результат);  
	КонецЕсли;
	
КонецПроцедуры 

Процедура ВывестиЧислаФибоначи(ЧислоN) Экспорт 
	А = 0;
	Б = 1;
	
	Сообщение(А);
	Сообщение(Б);
	
	Для Сч = 1 По ЧислоN Цикл  
		С = А + Б;
		Сообщение(С);
		А = Б;
		Б = С;
	КонецЦикла;	
	
КонецПроцедуры  

Процедура НайтиМинимальноеИзЧисел(А, Б) Экспорт
	
	Мин = 0;
	Макс = 0;
	ЧислаРавны = Ложь;
	
	Если А - Б = 0 Тогда 
		ЧислаРавны = Истина;
		Сообщение("Числа " + Строка(А) + " и " + Строка(Б) + " равны");
		
	ИначеЕсли А - Б < 0 Тогда	
		Мин = А; 
		Макс = Б;    
		
	Иначе
		Мин = Б;
		Макс = А;
		
	КонецЕсли; 
	
	Если Не ЧислаРавны Тогда
		Сообщение("Число " + Строка(Мин) + " минимальное, а " + Строка(Макс) + " максимальное");
	КонецЕсли;  
	
КонецПроцедуры

Процедура СравнениеДвухЧисел(ЧислоА, ЧислоБ) Экспорт
	
	Если ЧислоА <> ЧислоБ Тогда
		
		Мин = Мин(ЧислоА, ЧислоБ);
		Макс = Макс(ЧислоА, ЧислоБ); 
		Сообщение("Минимальное число " + Мин + ", максимальное число " + Макс);
		
	Иначе
		Сообщение("Числа равны!");
	КонецЕсли;
	
КонецПроцедуры      

Процедура ВозведениеДвойкиВСтепень(Степень) Экспорт    
	
	Сообщение(pow(2, Степень));
	
КонецПроцедуры

Процедура АлгоритмЕвклида(А, Б) Экспорт
	
	Пока А <> 0 И Б <> 0 Цикл
		
		Если А > Б Тогда
			
			А = А % Б;
			
		Иначе
			Б = Б % А;
			
		КонецЕсли;    
	КонецЦикла;
	
	Сообщение(А + Б);
	
КонецПроцедуры 

Процедура НахождениеНОК(А, Б) Экспорт
	
	НОК = Макс(А,Б);
	Пока НЕ (НОК % А = 0 И НОК % Б = 0) Цикл
		НОК = НОК + 1;
	КонецЦикла;
	Сообщение(НОК);
КонецПроцедуры 

Процедура СтоСлучайныхЧисел() Экспорт
	
	МассивСЧ = Новый Массив();
	
	Для Сч = 1 По 100 Цикл	
		ГСЧ = Новый ГенераторСлучайныхЧисел;
		СлучайноеЧисло = ГСЧ.СлучайноеЧисло(0, 1000);
		МассивСЧ.Добавить(СлучайноеЧисло);
	КонецЦикла;
	
	МинЧ = МассивСч[0];
	МаксЧ = МассивСч[0];     
	Сумма = 0;
	
	
	Для А = 0 По МассивСЧ.ВГраница() Цикл
		Число = МассивСЧ[А];
		
		Если Число < МинЧ Тогда
			МинЧ = Число;
		КонецЕсли;
		
		Если Число > МаксЧ  Тогда
			МаксЧ = Число;  
			
		КонецЕсли;    
		
		Сумма = Сумма + Число;
		
		
	КонецЦикла;               
	
	СреднееАрифметическое = Сумма / МассивСЧ.Количество();    
	Сообщение("Суммма = " + Сумма);
	Сообщение("Количество элементов = " + МассивСЧ.Количество());
	
	Сообщение("Мин = " + Строка(МинЧ) + " Макс = " +  Строка(МаксЧ) + " Среднее " + Строка(СреднееАрифметическое));
	
КонецПроцедуры 

Процедура СортировкаПузырьком() Экспорт
	
	МассивСЧ = Новый Массив();
	
	Для Сч = 1 По 100 Цикл	
		ГСЧ = Новый ГенераторСлучайныхЧисел;
		СлучайноеЧисло = ГСЧ.СлучайноеЧисло(0, 1000);
		МассивСЧ.Добавить(СлучайноеЧисло);
	КонецЦикла;
	
	Для i = 0 По МассивСЧ.ВГраница() Цикл
		Для j = 0 ПО МассивСЧ.Вграница() - i - 1 Цикл
			Если МассивСЧ[j] > МассивСЧ[j + 1] Тогда
				Замена = МассивСЧ[j];
				МассивСЧ[j] = МассивСЧ[j + 1];
				МассивСЧ[j + 1] = Замена;
			КонецЕсли;            
		КонецЦикла;        
	КонецЦикла;    
	
	Для Каждого Элемент Из МассивСЧ Цикл
		Сообщение(Элемент);	
	КонецЦикла;
	
КонецПроцедуры

Процедура ФакториалСлучайногоЧисла() Экспорт
	ГСЧ = Новый ГенераторСлучайныхЧисел;
	ЧислоN = ГСЧ.СлучайноеЧисло(1, 15);
	
	Факториал = 1;    
	Для Сч = 1 По ЧислоN Цикл
		Факториал = факториал * Сч;
	КонецЦикла; 
	
	Сообщение(Факториал); 
	
	
КонецПроцедуры 

Процедура Сообщение(ТекстСообщения)
	
	Сообщение = Новый СообщениеПользователю();
	Сообщение.Текст = ТекстСообщения;
	Сообщение.Сообщить(); 
	
КонецПроцедуры




